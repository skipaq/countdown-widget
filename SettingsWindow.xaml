<Window x:Class="CountdownWidget.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки"
        Width="280"
        Height="260"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#80000000" CornerRadius="15" Padding="20">
        <Grid>
            <TextBlock Text="Настройки"
                      Foreground="White"
                      FontSize="18"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,15"/>

            <StackPanel VerticalAlignment="Top" Margin="0,40,0,0">
                <Button Content="Изменить время отсчёта"
                        FontSize="14"
                        Foreground="LightGray"
                        Background="Transparent"
                        BorderBrush="#444"
                        BorderThickness="1"
                        Padding="10"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        Click="ChangeTimeButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Прозрачность"
                        FontSize="14"
                        Foreground="LightGray"
                        Background="Transparent"
                        BorderBrush="#444"
                        BorderThickness="1"
                        Padding="10"
                        Margin="0,10,0,10"
                        Cursor="Hand"
                        Click="OpacityButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Кнопка закрытия -->
            <Button x:Name="CloseButton"
                    Content="×"
                    FontSize="16"
                    FontWeight="Bold"
                    Width="26"
                    Height="26"
                    Background="Transparent"
                    BorderBrush="#FF5555"
                    Foreground="#FF5555"
                    BorderThickness="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="CloseButton_Click"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse Fill="{TemplateBinding Background}"
                                                 Stroke="{TemplateBinding BorderBrush}"
                                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Подпись внизу -->
            <TextBlock Text="by Skp ver 0.4"
                       Foreground="#55FFFFFF"
                       FontSize="11"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,10"/>
        </Grid>
    </Border>
</Window>